<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link rel="stylesheet" href="/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">日誌收容平台</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">查找日志</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/dashboard">查找儀表板</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">查找異樣log</a>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container">
      <h1>日誌數據</h1>
      <form action="/searchLogs" method="GET">
        <label for="startDate">開始日期:</label>
        <input type="date" name="startDate" id="startDate" required />
        <label for="endDate">結束日期:</label>
        <input type="date" name="endDate" id="endDate" required />

        <label for="host">選擇主機:</label>
        <select name="host" id="host" required>
          <option value="LAPTOP-2H1OVO0T">LAPTOP-2H1OVO0T</option>
          <option value="LAPTOP-GPPNAMEN">LAPTOP-GPPNAMEN</option>
          <option value="frankwin7-PC">frankwin7-PC</option>
          <option value="Poker">Poker</option>
        </select>

        <label for="index">選擇Index:</label>
        <select name="index" id="index" required></select>
        <button type="submit">搜索日誌</button>
      </form>
    </div>

    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">id</th>
          <th scope="col">index</th>
          <th scope="col">@timestamp</th>
          <th scope="col">hostname</th>
          <th scope="col">log_level</th>
          <th scope="col">event_id</th>
        </tr>
      </thead>

      <% if (error) { %>
      <p class="text-danger"><%= error %></p>
      <% } else if (logs) { %>
      <tbody>
        <% logs.forEach(function(log) { %>
        <tr>
          <td><a href="/logDetail/<%= log._id %>"><%= log._id %></a></td>
          <td><%= log._index %></td>
          <td><%= log._source["@timestamp"] %></td>
          <td><%= log._source.host.hostname %></td>
          <td><%= log._source.log.level %></td>
          <td><%= log._source['winlog']['event_id'] %></td>
        </tr>

        <% }); %>
      </tbody>
      <% } %>
    </table>
    <script>
      function generateIndexOption(year, month) {
        return [
          `winlogbeat-${year}.${month}`,
          // `win7winlogbeat-${year}.${month}`
        ];
      }

      function updateIndexOptions() {
        let date = new Date();
        let currentYear = date.getFullYear();
        let currentMonth = ("0" + (date.getMonth() + 1)).slice(-2); // 月份是從0開始的，所以+1

        let select = document.getElementById("index");

        // 假設我們要追溯的最早年份
        for (let year = 2023; year <= currentYear; year++) {
          for (let month = 10; month <= 12; month++) {
            // 對於當前年份，只添加到當前月份
            if (year === currentYear && month > date.getMonth() + 1) {
              break;
            }

            let formattedMonth = ("0" + month).slice(-2);
            let indexOptions = generateIndexOption(year, formattedMonth);

            indexOptions.forEach(function (index) {
              let optionExists = Array.from(select.options).some(
                (option) => option.value === index
              );
              if (!optionExists) {
                let option = document.createElement("option");
                option.value = option.text = index;
                select.appendChild(option);
              }
            });
          }
        }
      }

      // 在頁面加載時更新index選項
      window.onload = updateIndexOptions;
    </script>
  </body>
</html>
